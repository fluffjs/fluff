{
    "name": "router-e2e",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "implicitDependencies": [
        "@fluffjs/router",
        "@fluffjs/cli"
    ],
    "targets": {
        "playwright-install": {
            "command": "npx playwright install",
            "options": {
                "cwd": "e2e-router"
            }
        },
        "build": {
            "dependsOn": ["@fluffjs/router:build-internal"],
            "command": "npm run cli -- --cwd apps/fluff-router-demo build",
            "options": {
                "cwd": "."
            }
        },
        "e2e": {
            "dependsOn": ["playwright-install", "build"],
            "command": "npx playwright test --config=playwright.config.ts",
            "options": {
                "cwd": "e2e-router"
            }
        }
    }
}
