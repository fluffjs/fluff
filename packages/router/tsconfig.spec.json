{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./out-tsc/vitest",
        "noEmit": true,
        "paths": {
            "@fluffjs/fluff": [
                "packages/fluff/dist/index.d.ts"
            ],
            "@fluffjs/fluff/*": [
                "packages/fluff/dist/*"
            ],
            "@fluffjs/cli": [
                "packages/cli/src/index.ts"
            ],
            "@fluffjs/router": [
                "packages/router/src/index.ts"
            ]
        },
        "types": [
            "vitest/globals",
            "vitest/importMeta",
            "vite/client",
            "node",
            "vitest"
        ],
        "lib": [
            "ES2022",
            "dom"
        ]
    },
    "include": [
        "vite.config.ts",
        "vite.config.mts",
        "vitest.config.ts",
        "vitest.config.mts",
        "src/**/*.ts"
    ]
}
